---
interface Props {
  title: string;
  description: string;
  color: string;
}
---

<section
  class="flex flex-col gap-4 p-4 border border-input-border bg-input-background rounded-md"
  style={{ "--kanban-color": Astro.props.color }}
>
  <div
    class="h-1.5 w-[100%+32px] -mt-4 -mx-4 rounded-t-md"
    style={{ background: "var(--kanban-color)" }}
  >
  </div>
  <header>
    <h3 class="text-lg font-bold text-text font-section-title">
      {Astro.props.title}
    </h3>
    <p class="text-sm text-subtext">{Astro.props.description}</p>
  </header>
  <div class="flex flex-col gap-4">
    <slot />
  </div>
</section>
