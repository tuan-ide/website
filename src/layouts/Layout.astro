---
import { Font } from "astro:assets";
import { Seo } from "astro-seo-meta";
import "../styles/global.css";

const siteUrl = Astro.site ? Astro.site.toString() : "https://tuan.world/";
const ogImage = `${siteUrl}sneak-peek.png`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		
		<Seo
			title="Rethink the way we code."
			description="Tuan is a whole new experience for building applications that fits the human brain, not the computer."
			keywords={["IDE", "development", "collaboration", "team coding", "developer tools"]}
			icon="/favicon.png"
			themeColor="#EF4444"
			colorScheme="dark"
			robots="index, follow"
			facebook={{
				image: ogImage,
				url: siteUrl,
				type: "website"
			}}
			twitter={{
				image: ogImage,
				site: "@tuan_dot_world",
				card: "summary_large_image"
			}}
		/>

		<Font cssVariable="--font-clash-display" preload />
		<Font cssVariable="--font-satoshi" preload />
	</head>
	<body class="bg-background font-body px-8">
		<slot />
	</body>
</html>
